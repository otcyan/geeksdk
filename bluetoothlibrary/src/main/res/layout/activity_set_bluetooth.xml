<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/iv_back"
                       android:src="@mipmap/back"
                       android:padding="4dp"
                       android:layout_gravity="left"
                       android:layout_height="wrap_content"/>
            
            <TextView android:layout_width="match_parent"
                      android:text="打印设置"
                      android:layout_centerInParent="true"
                      android:textSize="20sp"
                      android:textColor="@color/gray_2"
                      android:gravity="center_horizontal"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
        
        <TextView android:layout_width="match_parent"
                  android:background="@color/gray_light"
                  android:layout_height="0.7dp"/>

        <ImageView
            android:id="@+id/img_printer_setting_icon"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/printer_uncon"/>
        <TextView
            android:id="@+id/txt_printer_setting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="软件检测到您没有开启蓝牙"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/txt_printer_setting_summary"
            android:layout_width="match_parent"
            android:text="请到系统设置开启蓝牙功能！"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_medium"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_printer_setting_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_ui_margin_large"
            android:layout_marginRight="@dimen/default_ui_margin_large"
            android:layout_marginTop="48dp"
            android:background="@drawable/green_btn_full_selector"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:text="直接打印"/>

        <Button
            android:id="@+id/btn_printer_setting_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_ui_margin_large"
            android:layout_marginLeft="@dimen/default_ui_margin_large"
            android:layout_marginRight="@dimen/default_ui_margin_large"
            android:background="@drawable/green_btn_full_selector"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:text="扫描蓝牙设备"/>
        <Button
            android:id="@+id/btn_printer_setting_test_bitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginLeft="@dimen/default_ui_margin_large"
            android:layout_marginRight="@dimen/default_ui_margin_large"
            android:layout_marginTop="@dimen/default_ui_margin_large"
            android:background="@drawable/green_btn_full_selector"
            android:textColor="@color/white"
            android:text="查看蓝牙连接帮助"/>
    </LinearLayout>
</ScrollView>