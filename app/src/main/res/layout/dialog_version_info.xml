<LinearLayout
    android:id="@+id/view_dailog"
    style="@android:style/Theme.Dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/show_dailog_bg"
    android:fadingEdge="none"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/dialog_version_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:text="提示"
        android:textColor="#808080"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />

    <com.geekandroid.sdk.update.views.AutoWebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.geekandroid.sdk.update.views.AutoWebView>

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_cancel_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button_dailog"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="#808080"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#e0e0e0" />

        <TextView
            android:id="@+id/tv_sure_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/line3"
            android:layout_weight="1"
            android:background="@drawable/selector_button_dailog"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="#1a1a1a"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>